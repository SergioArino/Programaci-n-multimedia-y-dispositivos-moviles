import java.io.File;

public class VerificadorRuta {
    public static void main(String[] args) {
        if (args.length == 0) {
            System.out.println("Por favor, proporciona una ruta como argumento.");
            return;
        }

        String ruta = args[0];
        File f = new File(ruta);

        try {
            if (!f.exists()) {
                System.out.println("La ruta no existe.");
            } else if (f.isDirectory()) {
                System.out.println("Es un directorio. Contenido:");
                String[] contenido = f.list();
                if (contenido != null) {
                    for (String nombre : contenido) {
                        System.out.println("- " + nombre);
                    }
                }
            } else if (f.isFile()) {
                System.out.println("Es un fichero.");
                System.out.println("Tama√±o: " + f.length() + " bytes");
            }
        } catch (Exception e) {
            System.err.println("Error al acceder a la ruta: " + e.getMessage());
        }
    }
}